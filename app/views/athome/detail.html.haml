-content_for :head do
	=javascript_include_tag 'excanvas','flot'

:javascript
	plotData = #{@plotData.to_json}
	plotOptions = #{@plotOptions.to_json}

#content
	#header
		&= @description
	#body
		#datetime
			%span#date= format_date @at
			%span#time= format_time @at
		#temperature.plot
		#lighting.plot
		#power.plot
		#footer
			%span Oldest
			&laquo;
			%span Older
			&lsaquo;
			%span Zoom In
			|
			%span Zoom Out
			&rsaquo;
			%span Newer
			&raquo;
			%span Newest
		%p="id=#{@config.networkID}, index=#{@index}, zoom=#{@zoom}, size=#{@bin_size_as_words}, n=#{@binned.length}"
	%ul#navigation
		%li home
		%li=link_to "help"
	#note
		=render :partial=>"note"