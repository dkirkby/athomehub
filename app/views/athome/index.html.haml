#content
	#header
		Welcome to your uci@home hub
	#body
		#datetime
			%span#date= format_date @at
			%span#time= format_time @at
		%table
			%tr
				%th
				%th.vcol Temp
				%th.vcol Light
				%th.vcol Power
			-@samples.each do |s|
				-p = s[:profile]
				%tr
					%td= link_to p.description, :action=>'detail', :nid=>p.networkID
					%td.temp= sprintf "%.1f&deg;",s[:temperature]
					%td.light= s[:lighting][0]
					%td.power= sprintf "%.2fW",s[:power][0]
	%ul#navigation
		%li home
		%li=link_to "help"
		%li=link_to "settings"
	#note
		=render :partial=>"note"